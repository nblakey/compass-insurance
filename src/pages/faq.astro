---
import Quicklinks from "../components/Quicklinks.astro";
import Layout from "../layouts/Layout.astro";
import Button from "../components/ui/Button.astro";
import { Image } from 'astro:assets';

import faqFull from '../images/faqFull.jpg';
import faqBanner from '../images/faqBanner.jpg';

import config from '../config/default.json';
---
<Layout title="Frequently Asked Questions - Compass Insurance Group" route="faq">
    <div class="mb-4 lg:mb-8">
        <div class="w-full h-1/3 lg:hidden"><Image alt="two men sitting at a table discussing over coffee" src={faqBanner} class="object-cover h-full w-full lg:hidden" loading="eager" /></div>
        <div class="hidden lg:block mx-auto w-[900px] h-[506px]" ><Image alt="two men sitting at a table discussing over coffee" src={faqFull} class="object-cover h-full w-full" loading="eager" /></div>
    </div>
    <div class="relative flex flex-col gap-6 px-6 md:px-0 md:max-w-[700px] lg:max-w-[900px] md:mx-auto lg:mb-10">
        <div class="flex flex-col items-start w-full gap-3">
            <div class="product-header text-center mx-auto">Frequently Asked Questions</div>
                {config.faq.map((q, i) => (
                    <div class="product-subheader !text-left">{q.question}</div>
                    <p>{q.answer}</p>
                ))}
        </div>
        <Button className="mt-3 w-[80%] max-w-[425px] mx-auto md:w-full lg:w-80 lg:mx-0" href={config.links.contact.href}>{config.links.contact.buttonText}</Button>
        <Quicklinks className="lg:hidden mb-6 mx-auto md:max-w-[700px]" showDropdown />
    </div>
</Layout>
